<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "https://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.green.greengram.feed.FeedMapper">
    <insert id="insFeed"
            useGeneratedKeys="true"
            keyProperty="ifeed">
        INSERT INTO t_feed
        SET iuser = #{iuser}
        , contents = #{contents}
        , location = #{location}
    </insert>

    <insert id="insFeedPic">
        INSERT INTO t_feed_pic
        (ifeed, pic)
        VALUES
        <!-- <foreach collection="pics" item="pic" open="(" close=")" separator="), (">
        #{ifeed}, #{pic}
        </foreach>-->
        <foreach collection="pics" item="pic" separator=",">
            (#{ifeed}, #{pic})
        </foreach>
    </insert>

    <select id="selFeed">
        SELECT f.ifeed, f.contents, f.location, u.iuser, u.nm as writer, f.created_at as createdAt
        FROM t_user u
        JOIN t_feed f
        ON f.iuser=u.iuser
        ORDER BY ifeed DESC
        LIMIT #{startIdx}, #{rowCount}

    </select>


</mapper>